body, img, div, ul, li, span {
    padding: 0;
    margin: 0;
    border: 0;
}

body {
    margin: 0;
    padding: 0;
    background: #fff;
}

.post {
    margin: 0;
}

.post-header {
    position: relative;
    background: #fff;
    border-bottom: 1px solid #ddd;
    height: 64px;
}

.post-header h1 {
    font-family: 'HelveticaNeue-CondensedBold';
}

.post-author-images {
    margin: 0;
    width: 84px;
}

.post-author-image {
    margin: 10px;
    width: 64px;
    height: 64px;
}

.post-author {
    padding-top: 5px;
    padding-left: 10px;
    margin-left: 64px;
    font-weight: bold;
    color: #444;
    font-size: 0.8em;
    line-height: 1.0em;
    /*    font-family: Helvetica, Arial, sans-serif; */
}

.post-author-bio {
    padding-top: 5px;
    padding-left: 10px;
    margin-left: 64px;
    color: #cacaca;
    font-size: 0.8em;
    font-weight: normal;
    font-family: 'HelveticaNeue';
    /*    font-family: Helvetica, Arial, sans-serif; */
}


.post-body-bio:after {
    content: "";
    display: block;
    clear: both;
}


.post-author-bio em {
    color: #999;
    margin: 0;
    padding: 0;
}

#post-author-images li {
    list-style: none;
    margin: 0;
    padding: 5px 5px 0 5px;
    border: 1px solid #ccc;
    border-left: none;
    border-bottom: none;
    width: 79px;
}

#post-authors {

}

#post-author-images li:last-child {
    border-bottom: 1px solid #ccc;
}

.post-date {
    float: right;
    padding: 5px;
    font-weight: bold;
    color: #999;
    font-size: 0.8em;
    line-height: 1.0em;
    /*    font-family: Helvetica, Arial, sans-serif; */
}


ul.post-tags {
    margin: 0;
    padding: 0;
    height: 20px;
    color: #888;
    font-size: 0.8em;
    line-height: 1.1em;
    background: #aaa;
    border-bottom: 1px solid #888;
    /*    font-family: Helvetica, Arial, sans-serif; */
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

li.post-tag {
    display: inline;
    width: 50%;
    padding: 10px
}

li.post-tag:after {
    content: ",";
}

li.post-tag:last-child:after {
    content: "";
}

.post-body {
    padding: 10px;
    margin: 0;
    background: #eee;
    border-bottom: 1px solid #ddd;
}

.post-body {
    font-size: 20px;
}

.post-title {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    padding: 5px;
    margin: 0;
    color: #666;
    font-weight: normal;
    font-size: 24px;
    line-height: 52px;
    text-align: center;
    /*    font-family: Helvetica, Arial, sans-serif; */
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.post-content {
    padding: 10px;
    font-weight: normal;
    color: #222;
    font-size: 0.8em;
    line-height: 1.0em;
    font-family: 'HelveticaNeue-Light';
    overflow-y: auto;
}
